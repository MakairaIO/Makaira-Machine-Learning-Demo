@import "src/styles/reset.styl"
@import "src/styles/mixins.styl"
@import "src/styles/fonts.styl"

body
  padding 0 rem(15px)
  background-color #fffaed
  color rgba(32, 43, 46, 0.95) 
  font-family "Maven Pro Regular", sans-serif
  font-size rem(14px)
  font-smooth always
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

#app-root
  display grid
  grid-template-columns 200px auto
  grid-template-rows 200px calc(100vh - 200px)
  grid-template-areas "personas cases"\
                      "personas products"
  grid-column-gap rem(50px)

aside
  grid-area personas

.makaira-logo
  display block
  height rem(200px)
  width rem(200px)
    
.search-case-list
  grid-area cases
  height rem(120px)
  margin-top rem(40px)
  fiveColumnGrid()

.searchcase
  input
    display none

  span
    display inline-flex
    align-items center
    justify-content center
    width 100%
    height rem(50px)
    font-size rem(12px)
    border 3px solid 
    border-radius 3px
    font-family "Maven Pro Bold", sans-serif

  &--search 
    span
      color #63b6c8
      border-color #63b6c8
    input:checked + span
      background-color #63b6c8
      color #fff
      border-color #fffaed
  &--category 
    span
      color #7ac74f
      border-color #7ac74f
    input:checked + span
      background-color #7ac74f
      color #fff
      border-color #fffaed
  &--manufacturer 
    span
      color #eb6e68
      border-color #eb6e68
    input:checked + span
      background-color #eb6e68
      color #fff
      border-color #fffaed


.persona-list
  height calc(100% - 200px)
  display flex
  flex-direction column

.persona
  display inline-flex
  flex-direction column
  justify-content flex-end
  height rem(170px)
  text-align center

  & + &
    margin-top rem(20px)

  img
    height rem(100px)
    width rem(100px)
    display block
    margin 0 auto rem(15px)
    opacity 0.4

  input:checked + img
    opacity 1

  input
    display none

  span
    display block

    & + span
      margin-top rem(5)

.product-list
  grid-area products
  fiveColumnGrid()
  grid-template-rows rem(170px) rem(170px) rem(170px) rem(170px) rem(170px)
  grid-row-gap rem(20px)

.product-tile
  height rem(170px)
  background-color #fff
  box-shadow 0px 2px 4px rgba(0,0,0,0.18)
  padding rem(10px) rem(15px)
  display flex
  flex-direction column
  text-align center

  figure
    margin-bottom auto
    display flex
    justify-content center

.product-tile__title
  font-size rem(12px)

.product-tile__manufacturer
  font-size rem(10px)
  color rgba(32, 43, 46, 0.7) 
  margin-top rem(5px)

.product-tile__price
  font-size rem(12px)
  color #61304d
  margin-top rem(5px)
  padding-top rem(5px)
  border-top 1px solid rgba(32, 43, 46, 0.1)  

