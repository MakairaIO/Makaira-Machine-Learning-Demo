@import "src/styles/reset.styl"
@import "src/styles/mixins.styl"
@import "src/styles/fonts.styl"

body
  background-color #fffaed
  color rgba(32, 43, 46, 0.95) 
  font-family: "Maven Pro Regular", sans-serif
  font-size rem(14px)
  font-smooth always
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.parameter-selection
  display flex
  justify-content space-around
  margin-top rem(10px)

.product-list
  display flex
  flex-wrap wrap

.product-tile
  width calc(20% - 20px)
  height 170px
  background-color #fff
  box-shadow 0px 2px 4px rgba(0,0,0,0.18)
  margin rem(10px)
  padding rem(10px) rem(15px)
  display flex
  flex-direction column
  text-align center

  figure
    margin-bottom auto
    display flex
    justify-content center

.product-tile__title
  font-size rem(12px)

.product-tile__manufacturer
  font-size rem(10px)
  color rgba(32, 43, 46, 0.7) 
  margin-top rem(5px)

.product-tile__price
  font-size rem(12px)
  color #61304d
  margin-top rem(5px)
  padding-top rem(5px)
  border-top 1px solid rgba(32, 43, 46, 0.1)  
